# nginx.conf {{ inventory_hostname }}

worker_processes {{ nginx_worker_processes }};

user {{ nginx_user }};
pid {{ nginx_pidfile }};
error_log {{ nginx_error_log }};

events {
    worker_connections {{ nginx_worker_connections }};
    accept_mutex off;
}

http {
    include mime.types;
    default_type application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log {{ nginx_access_log }};
    sendfile on;

    upstream app_server {
        ip_hash;
        server unix:/run/gunicorn/socket fail_timeout=0;
        server {{ other_ui_ip_address }};
    }

    server {
        listen 80 default;
        client_max_body_size 4G;
        server_name {{ my_ip_address }};
        charset utf-8;

        #listen   443;
        #ssl    on;
        #ssl_certificate    /srv/application/letsencrypt/cert.pem;
        #ssl_certificate_key    /srv/application/letsencrypt/cert.key;

        keepalive_timeout 5;

        location /static {
        alias /srv/application/static;
        }

        location /media {
        alias /srv/application/media;
        }

        location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header User-Agent $http_user_agent;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Host $http_host;
            proxy_redirect off;

            proxy_pass   http://app_server;
        }
    }
}
